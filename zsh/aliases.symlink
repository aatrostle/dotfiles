# ohmyzsh aliases
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias zshreload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"

# git aliases
alias glgo="git log --decorate --all --graph --oneline"
alias gm='git merge --no-ff'
alias cgst="clear && git status"
alias gdc='git diff --cached'
alias gdf='git diff --color | diff-so-fancy'

# sublime aliases
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# npm aliases
alias npm-exec='PATH=$(npm bin):$PATH'
alias npmlg='npm ls --depth=0 --global'
alias npmll='npm ls --depth=0'

# rails aliases
alias rails_local='rails s -b 0.0.0.0'

# insights aliases
alias i_test='bundle exec spring stop && bundle exec guard'

# utility aliases
alias kguard='pkill -f spork'
alias grunt="nocorrect grunt"
alias bower="noglob bower"
